@using MvcCv.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br/>
<br/>
<h4>Sertifika Bilgileri</h4>
<br/>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            
                                            <th class="bg-gradient-cyan">Sertifika Adı</th>
                                            <th class="bg-gradient-cyan">Tarih</th>
                                            <th class="bg-gradient-cyan">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                        <tr>
                                            
                                            <td>@item.Aciklama</td>
                                            <td>@item.Tarih</td>
                                            <td class="text-right py-0 align-middle">
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/Sertifikalar/SertifikaDuzenle/@item.ID" class="btn btn-info"><i class="fas fa-eye"></i></a>
                                                    <a href="/Sertifikalar/SertifikaSil/@item.ID" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                <div class="row">
                    <div class="col-12">
                        <a href="/Sertifikalar/YeniSertifika/" class="btn btn-success bg-gradient-cyan">Yeni Sertifika Ekle</a>
                    </div>
                </div>



