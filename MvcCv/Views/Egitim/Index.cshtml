@using MvcCv.Models.Entity
@model List<TblEgitimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Eğitimlerim Sayfası</h4>
<br />
<a href="/Egitim/YeniEgitim" class="btn btn-info">Yeni Eğitim Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Sıra</th>
            <th>Başlık</th>
            <th>Alt Başlık 1</th>
            <th>Alt Başlık 2</th>
            <th>Genel Not Ortalaması</th>
            <th>Tarih</th>
            <th>Düzenle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID.</td>
                <td>@item.Baslik</td>
                <td>@item.AltBaslik1</td>
                <td>@item.AltBaslik2</td>
                <td>@item.GNO</td>
                <td>@item.Tarih</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Egitim/EgitimDuzenle/@item.ID">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Düzenle
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm" href="/Egitim/EgitimSil/@item.ID">
                        <i class="fas fa-trash">
                        </i>
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>