@model MvcCv.Models.Entity.TblHakkimda
@{
    ViewBag.Title = "HakkimdaDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br/>
<h4>Hakkımda Bilgilerini Düzenle</h4>
<br/>
<form method="post">
    @Html.Label("Ad")
    @Html.TextBoxFor(x=>x.Ad,new {@class="form-control" })
    <br/>
    @Html.Label("Soyad")
    @Html.TextBoxFor(x=>x.Soyad,new {@class="form-control" })
    <br/>
    @Html.Label("Adres")
    @Html.TextBoxFor(x=>x.Adres, new { @class = "form-control" })
    <br/>
    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Telefon, new {@class="form-control"})
    <br/>
    @Html.Label("Mail")
    @Html.TextBoxFor(x=>x.Mail,new { @class="form-control"})
    <br/>
    @Html.Label("Aciklama")
    @Html.TextAreaFor(x=>x.Aciklama,new {@class="form-control" })
    <br/>
    @Html.Label("Resim")
    @Html.TextBoxFor(x=>x.Resim,new {@class="form-control"})
    <br/>
<button class="btn btn-success bg-gradient-cyan">Güncelle</button>
</form>


